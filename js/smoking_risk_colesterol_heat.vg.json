{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Heatmap showing the count of cholesterol levels greater than 240 by Smoking Status and Sex.",
    "width": 300,
    "height": 200,
    "background": "#dddddd",
    "data": {
      "url": "https://raw.githubusercontent.com/ongzn/3179_asgn2/refs/heads/main/data/heart_attack_prediction_dataset.csv",
      "format": {
        "type": "csv"
      }
    },
    "transform": [
      {
        "calculate": "datum['Smoking'] == 1 ? 'Yes' : 'No'",
        "as": "SmokingStatus"
      },
      {
        "calculate": "datum['Cholesterol'] > 240 ? 'Yes' : 'No'",
        "as": "HasHighCholesterol"
      },
      {
        "aggregate": [{"op": "count", "as": "CholesterolCount"}],
        "groupby": ["SmokingStatus", "Sex", "HasHighCholesterol"]
      },
      {
        "impute": "CholesterolCount",
        "key": "SmokingStatus",
        "groupby": ["Sex", "HasHighCholesterol"],
        "value": 0
      }
    ],
    "mark": "rect",
    "encoding": {
      "x": {
        "field": "SmokingStatus",
        "type": "nominal",
        "title": "Smoking"
      },
      "y": {
        "field": "Sex",
        "type": "nominal",
        "title": "Sex"
      },
      "color": {
        "field": "CholesterolCount",
        "type": "quantitative",
        "title": "Number of People",
        "scale": {
          "scheme": "purples",
          "domainMin": 0
        }
      },
      "tooltip": [
        {"field": "CholesterolCount", "type": "quantitative", "title": "Number of People"},
        {"field": "SmokingStatus", "type": "nominal", "title": "Smoking Status"},
        {"field": "Sex", "type": "nominal", "title": "Sex"},
        {"field": "HasHighCholesterol", "type": "nominal", "title": "Has Cholesterol > 240"}
      ]
    }
  }