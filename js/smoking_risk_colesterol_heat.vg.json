{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Heatmap showing the count of cholesterol levels greater than 240 by Smoking Status and Sex.",
    "width": 300,
    "height": 200,
    "background": "#dddddd",
    "data": {
      "url": "https://raw.githubusercontent.com/ongzn/3179_asgn2/refs/heads/main/data/heart_attack_prediction_dataset.csv",
      "format": {
        "type": "csv"
      }
    },
    "transform": [
      {
        "calculate": "datum['Smoking'] == 1 ? 'Yes' : 'No'",
        "as": "SmokingStatus"
      },
      {
        "calculate": "datum['Cholesterol'] > 240 ? 1 : 0",
        "as": "HighCholesterolCount"
      },
      {
        "calculate": "datum.HighCholesterolCount == 1 ? 2 : 1",
        "as": "AdjustedCholesterolCount"
      },
      {
        "aggregate": [{"op": "sum", "field": "AdjustedCholesterolCount", "as": "HighCholesterolTotal"}],
        "groupby": ["SmokingStatus", "Sex"]
      },
      {
        "calculate": "ceil(datum.HighCholesterolTotal / 2)",
        "as": "CholesterolDisplay"
      }
    ],
    "mark": "rect",
    "encoding": {
      "x": {
        "field": "SmokingStatus",
        "type": "nominal",
        "title": "Smoking"
      },
      "y": {
        "field": "Sex",
        "type": "nominal",
        "title": "Sex"
      },
      "color": {
        "field": "CholesterolDisplay",
        "type": "quantitative",
        "title": "Number of Cholesterol > 240",
        "scale": {
          "scheme": "purples"
        }
      },
      "tooltip": [
        {"field": "CholesterolDisplay", "type": "quantitative", "title": "Number of Cholesterol > 240"},
        {"field": "SmokingStatus", "type": "nominal", "title": "Smoking Status"},
        {"field": "Sex", "type": "nominal", "title": "Sex"}
      ]
    }
  }