{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#dddddd",
  "width": 800,
  "height": 400,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ongzn/3179HomeworkWeek9Data/refs/heads/main/ne_110m_admin_0_countries.json",
    "format": {
      "type": "topojson", 
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "#f1f8f9", "stroke": "navy"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#f1f8f9"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME_EN",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ongzn/3179_asgn2/refs/heads/main/data/smoking_death_rate.csv"
            },
            "key": "Entity",
            "fields": ["Smoking mortality"]
          }
        },
        {
          "calculate": "replace(datum['Smoking mortality'], /\\./g, '')",
          "as": "Smoking mortality"
        },
        {
          "calculate": "(datum['Smoking mortality'] / 10000)", 
          "as": "Mortality per 10k population"
        },
        {
          "calculate": "format(datum['Mortality per 10k population'], '.0f') + ' people per 10,000 population'",
          "as": "Formatted Mortality"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "navy"},
      "encoding": {
        "color": {
          "field": "Mortality per 10k population",
          "type": "quantitative",
          "scale": {
            "domain": [0, 5000, 10000],
            "range": ["#fee5d9", "#fcae91", "#de2d26"],
            "scheme": "reds"
          }
        },
        "tooltip": [
          {"field": "properties.NAME_EN", "type": "nominal", "title": "Country"},
          {"field": "Formatted Mortality", "type": "nominal", "title": "Smoking Mortality"}
        ]
      }
    }
  ]
}